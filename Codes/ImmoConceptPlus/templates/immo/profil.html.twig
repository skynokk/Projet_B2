{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('index.css') }}">
{% endblock %}

{% block body %}

    {% if not app.user %}
    <div class="info1">
        Vous devez être connecter pour pouvoir accéder à cette page
    </div>

    {% elseif information.id != app.user.id %}
    <div class="info1">
        Vous ne pouvez pas acceder à ce profil
    </div>
    
    {% else %}}
    <h1 class="titreprofil">PROFIL</h1>

    <input type="image" class="avatar" alt="Avatar" src="{{ asset('images/avatar.png') }}">

    <div class="info2">

        Login : {{information.username}}<br>
        Prénom : {{information.prenom}}<br>
        Nom : {{information.nom}}<br>
        Sexe : {{information.sexe}}<br>
        Mail : {{information.mail}}<br>
        Téléphone : Non renseigné<br><br>
        <a href="/">Modifier le mot de passe</a><br>
    </div>
    {% endif %}

{% endblock %}
